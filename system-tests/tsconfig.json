{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@mytaptrack"
    ],
    "lib": [
      "ESNext",
      "dom"
    ],
    "types":[
      "node",
      "jest",
      "ts-jest"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts",
    "cdk.out"
  ]
}
